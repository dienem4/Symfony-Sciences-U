{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{# STYLES #}
{% block styles %}
	{{ encore_entry_link_tags('register') }}
{% endblock %}

{# SCRIPTS #}
{% block scripts %}
	{{ encore_entry_script_tags('register') }}
{% endblock %}

{% block body %}
  <h1 class="text-center">Inscrivez-vous</h1><br/>
	<div class="container">
		<div class="d-flex justify-content-center"> {# Ajout du div pour centrer le formulaire #}
			{{ form_start(registrationForm) }}
			<div class="row">
				<div class="col-md-4"> {# Utilisation de col-md-4 pour diminuer la largeur à 1/3 sur les écrans moyens et plus grands #}
					{{ form_label(registrationForm.firstname, '', {'label_attr': {'class': 'form-label'}}) }}
					<div class="input-group mb-3">
						{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="error">{{ form_errors(registrationForm.firstname) }}</div>
				</div>
				<div class="col-md-4"> {# Utilisation de col-md-4 pour diminuer la largeur à 1/3 sur les écrans moyens et plus grands #}
					{{ form_label(registrationForm.lastname, '', {'label_attr': {'class': 'form-label'}}) }}
					<div class="input-group mb-3">	
						{{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="error">{{ form_errors(registrationForm.lastname) }}</div>
				</div>
				<div class="col-md-4"> {# Utilisation de col-md-4 pour diminuer la largeur à 1/3 sur les écrans moyens et plus grands #}
					{{ form_label(registrationForm.email, '', {'label_attr': {'class': 'form-label'}}) }}
					<div class="input-group mb-3">
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="error">{{ form_errors(registrationForm.email) }}</div>
				</div>

				<div class="col-12">
					{{ form_label(registrationForm.password, '', {'label_attr': {'class': 'form-label'}}) }}
					<div class="input-group mb-3">
						{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
						{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control ms-4'}}) }}
					</div>
					<div class="error">{{ form_errors(registrationForm.password) }}</div>
				</div>
				<div class="col-12">
					<button type="submit" class="btn btn-primary mt-3">S'inscrire</button>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
